{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
    "manifestVersion": "1.17",
    "version": "1.2.14",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://${{TAB_DOMAIN}}",
        "privacyUrl": "https://${{TAB_DOMAIN}}/index.html#/privacy",
        "termsOfUseUrl": "https://${{TAB_DOMAIN}}/index.html#/termsofuse"
    },
    "icons": {
        "color": "BizCard.png",
        "outline": "BizCardOutline.png"
    },
    "name": {
        "short": "BizCard",
        "full": "BizCard"
    },
    "description": {
        "short": "포스코인터내셔널 임직원분들을 위한 명함 관리 APP",
        "full": "본 어플은 포스코인터내셔널 임직원분들을 위한 명함 관리 APP으로써, SSAFY에서 제작하였습니다."
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [],
    "configurableTabs": [
        {
            "configurationUrl": "https://${{TAB_DOMAIN}}/index.html#/configure",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupChat"
            ],
            "meetingSurfaces": [
                "sidePanel",
                "stage"
            ],
            "context": [
                "channelTab",
                "privateChatTab",
                "meetingChatTab",
                "meetingDetailsTab",
                "meetingSidePanel",
                "meetingStage"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "myCard",
            "name": "내 명함",
            "contentUrl": "https://${{TAB_DOMAIN}}/index.html#",
            "websiteUrl": "https://${{TAB_DOMAIN}}/index.html#",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "myAlbum",
            "name": "명함 지갑",
            "contentUrl": "https://${{TAB_DOMAIN}}/index.html#/myAlbum",
            "websiteUrl": "https://${{TAB_DOMAIN}}/index.html#/myAlbum",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "myTeam",
            "name": "팀 명함",
            "contentUrl": "https://${{TAB_DOMAIN}}/index.html#/myTeam",
            "websiteUrl": "https://${{TAB_DOMAIN}}/index.html#/myTeam",
            "scopes": [
                "personal"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{TAB_DOMAIN}}"
    ],
    "webApplicationInfo": {
        "id": "${{AAD_APP_CLIENT_ID}}",
        "resource": "api://${{TAB_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
    },
    "authorization": {
        "permissions": {
            "resourceSpecific": [
                {
                    "name": "MeetingStage.Write.Chat",
                    "type": "Delegated"
                },
                {
                    "name": "ChannelMeetingStage.Write.Group",
                    "type": "Delegated"
                },
                {
                    "name": "LiveShareSession.ReadWrite.Chat",
                    "type": "Delegated"
                },
                {
                    "name": "LiveShareSession.ReadWrite.Group",
                    "type": "Delegated"
                },
                {
                    "name": "OnlineMeetingNotification.Send.Chat",
                    "type": "Application"
                }
            ]
        }
    }
}